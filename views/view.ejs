<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/css/materialize.min.css">

    <title>Recipes</title>
</head>
<body>
<div class="container">
    <div>

    </div>
    <% for(var i=0; i<recipes.length; i++) {%>
        <div class="row">
            <div class="col s12 m7">
                <div class="card">
                    <div class="card-image">
                        <img class="materialboxed" src="<%= typeof recipes[i].imageUrl != 'undefined' ? recipes[i].imageUrl : '' %>" class="responsive-img">
                        <span class="card-title"><%= recipes[i].recipeName %></span>
                    </div>
                    <div class="card-content">
                        <div>
                            <p>Ingredients:</p><br>
                            <p><%= recipes[i].recipeIngredients %></p>
                        </div>
                        <br>
                        <div class="divider"></div>
                        <br>
                        <div>
                            <p>Description:</p><br>
                            <p><%= recipes[i].recipeDescription %></p>
                        </div>
                    </div>
                    <div class="card-action">
                    </div>
                </div>
            </div>
        </div>
        <br>
    <% } %>
</div>

<script
        src="https://code.jquery.com/jquery-3.2.1.min.js"
        integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.2/js/materialize.min.js"></script>
</body>
</html>